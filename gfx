    <script>
        function showProduct(product) {
            document.getElementById('main-page').style.display = 'none';
            document.getElementById('product-page-' + product).style.display = 'block';
        }

        function showMain() {
            const productPages = document.getElementsByClassName('product-page');
            for (let i = 0; i < productPages.length; i++) {
                productPages[i].style.display = 'none';
            }
            document.getElementById('main-page').style.display = 'block';
        }
    </script>

